<% @books.each do |book| %>
	Name: <%= book.name %> <br/>
	Author: <%= book.author %> <br/>
	<!-- So, to access the return day field, I iterate over the books.borrowed books collection -->
	Return Date: <% book.borrowed_books.each do |borrow| %>
		<%= borrow.return_date %>
	<% end %><br/>
	<% book.users.each do |user| %>
		<%= user.email %><br/>
	<% end %>
<% end %>